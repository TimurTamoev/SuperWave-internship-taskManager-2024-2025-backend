# Application Settings
APP_NAME="Менеджер задач СуперВейв"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="Разработка. Локально"
HOST="0.0.0.0"
PORT=8000

# Database
DATABASE_URL="sqlite:///./swtaskmanager.db"

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ENCRYPTION_KEY="your-encryption-key-must-be-32-bytes-long-change-this"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# SMTP Settings (для автоматической отправки email ответов)
SMTP_SERVER="smtp.mail.ru"
SMTP_PORT=587
SMTP_USERNAME="your_email@mail.ru"
SMTP_PASSWORD="your_email_password"
SMTP_FROM_EMAIL="your_email@mail.ru"
SMTP_FROM_NAME="SWTaskManager"
SMTP_USE_TLS=True

